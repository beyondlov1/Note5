<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_note_detail_operation_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="2dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <RelativeLayout
        android:id="@+id/fragment_note_detail_operation_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/fragment_note_detail_operation_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="2dp"
            android:background="@drawable/circle_24dp_white"
            android:elevation="5dp"
            android:src="@drawable/ic_search_black_24dp" />

        <ImageButton
            android:id="@+id/fragment_note_detail_operation_browser_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/fragment_note_detail_operation_search"
            android:background="@drawable/circle_24dp_white"
            android:elevation="5dp"
            android:src="@drawable/ic_open_in_browser_yellow_800_24dp" />

        <ImageButton
            android:id="@+id/fragment_note_detail_operation_stick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/fragment_note_detail_operation_browser_search"
            android:background="@drawable/circle_24dp_white"
            android:elevation="5dp"
            android:src="@drawable/ic_thumb_up_blue_400_24dp" />

        <ImageButton
            android:id="@+id/fragment_note_detail_to_todo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/fragment_note_detail_operation_stick"
            android:background="@drawable/circle_24dp_white"
            android:elevation="5dp"
            android:src="@drawable/ic_swap_horiz_teal_300_24dp" />

        <ImageButton
            android:id="@+id/fragment_note_detail_operation_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/fragment_note_detail_to_todo"
            android:background="@drawable/circle_24dp_white"
            android:elevation="5dp"
            android:src="@drawable/ic_done_blue_24dp" />

        <ImageButton
            android:id="@+id/fragment_note_detail_operation_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_margin="2dp"
            android:background="@drawable/circle_24dp_white"
            android:elevation="5dp"
            android:src="@drawable/ic_delete_red_600_24dp" />

    </RelativeLayout>

</FrameLayout>
