<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_float_editor_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/fragment_float_editor_core"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/corners_5dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

        <com.beyond.note5.view.markdown.editor.HighlightingEditor
            android:id="@+id/float_editor_fragment_edit_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:autoLink="web"
            android:background="@null"
            android:ellipsize="middle"
            android:ems="10"
            android:gravity="top"
            android:hint="@string/content_hint"
            android:inputType="textMultiLine"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:textAlignment="gravity" />

        <ImageButton
            android:id="@+id/float_editor_fragment_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:background="@null"
            android:src="@drawable/ic_save_black_24dp" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>