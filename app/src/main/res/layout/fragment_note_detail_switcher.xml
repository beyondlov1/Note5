<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        >

        <com.beyond.note5.view.custom.ViewSwitcher
            android:id="@+id/fragment_note_detail_view_switcher"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </com.beyond.note5.view.custom.ViewSwitcher>

        <TextView
            android:id="@+id/fragment_note_detail_page_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_note_detail_operation_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <FrameLayout
            android:id="@+id/fragment_note_detail_operation_items"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:visibility="invisible"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/fragment_note_detail_operation_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/circle_24dp_white"
                android:elevation="5dp"
                android:src="@drawable/ic_delete_red_600_24dp" />

            <ImageButton
                android:id="@+id/fragment_note_detail_operation_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/circle_24dp_white"
                android:elevation="5dp"
                android:src="@drawable/ic_search_black_24dp" />
        </FrameLayout>

    </FrameLayout>

</FrameLayout>
