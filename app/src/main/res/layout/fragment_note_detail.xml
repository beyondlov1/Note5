<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

   <include layout="@layout/fragment_note_detail_tool"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        >

        <com.beyond.note5.view.custom.ViewSwitcher
            android:id="@+id/fragment_note_detail_view_switcher"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </com.beyond.note5.view.custom.ViewSwitcher>

        <TextView
            android:id="@+id/fragment_note_detail_page_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/page_count"
            android:textAlignment="gravity" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/fragment_note_detail_modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="modify"/>
            <Button
                android:id="@+id/fragment_note_detail_hide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hide" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
