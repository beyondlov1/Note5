<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/fragment_document_display_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <WebView
            android:id="@+id/fragment_document_display_web"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:ignore="NestedWeights">

        </WebView>

        <Button
            android:id="@+id/fragment_document_modify_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="modify" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_document_modify_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/fragment_document_modify_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:background="@null"
            android:ellipsize="middle"
            android:ems="10"
            android:gravity="top"
            android:hint="@string/title_hint"
            android:inputType="textMultiLine"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:textAlignment="gravity" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/google_green" />

        <EditText
            android:id="@+id/fragment_document_modify_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:autoLink="web"
            android:background="@null"
            android:ellipsize="middle"
            android:ems="10"
            android:gravity="top"
            android:hint="@string/content_hint"
            android:inputType="textMultiLine"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:textAlignment="gravity"
            tools:ignore="NestedWeights" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fragment_document_modify_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@android:string/cancel" />

            <Button
                android:id="@+id/fragment_document_modify_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="OK" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>